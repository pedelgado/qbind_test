{% extends 'layout.html.twig' %}

{% block content %}
    <div class="text-white">

        <div class="mb-5">
            {{ content }}
        </div>

        {% if items %}
            <div class="relative overflow-x-auto shadow-md sm:rounded-lg">
                <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
                    <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                    <tr>
                        <th scope="col" class="px-6 py-3">
                            Value
                        </th>
                    </tr>
                    <tbody>
                        {% for item in items %}
                            <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 border-gray-200 hover:bg-gray-50 dark:hover:bg-gray-600">
                                <td class="px-6 py-4">
                                    {{ item.value }}
                                </td>
                            </tr>
                            <tr class="bg-gray-800 border-gray-700 hover:bg-gray-600 {% if not loop.last %} border-b {% endif %}">
                                <td class="px-6 py-4">
                                    {{ item.value }}
                                </td>
                            </tr>
                        {% endfor  %}
                    </tbody>
                </table>
            </div>
        {% else %}
            <div class="bg-gray-800 p-5 rounded-lg border-dashed border-1 border-gray-500">
                <p class="text-gray-400 italic">
                    No items yet
                </p>
            </div>

            <p class="text-gray-300 mt-2">
                Go to
                <a href="/upload" class="text-indigo-400 font-semibold">
                    upload
                </a>
                form to include new items.
            </p>
        {% endif %}

    </div>
{% endblock %}